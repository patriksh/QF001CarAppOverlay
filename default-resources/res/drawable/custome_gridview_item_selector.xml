<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/gray" />
            <gradient android:startColor="#ff272929" android:endColor="#ff272929" android:angle="270.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ff272929" android:endColor="#ff272929" android:angle="270.0" />
            <stroke android:width="1.0px" android:color="@color/gray" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#ff151616" android:endColor="#ff151616" android:angle="270.0" />
            <stroke android:width="1.0px" android:color="@color/gray" />
        </shape>
    </item>
</selector>