<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/gray" />
            <gradient android:startColor="@color/bottom_ac_text_color" android:endColor="@color/bottom_ac_text_color" android:angle="270.0" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/bottom_ac_text_color" android:endColor="@color/bottom_ac_text_color" android:angle="270.0" />
            <stroke android:width="1.0px" android:color="@color/gray" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/app_top_bg" android:endColor="@color/app_top_bg" android:angle="270.0" />
            <stroke android:width="1.0px" android:color="@color/gray" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
</selector>